@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>品名</th>
        <th>價格</th>
        <th>數量</th>
        <th></th>  
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    { 
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit","Product",new { @id = Model.Rows[i][0]})">編輯</a>
                <a href="@Url.Action("Delete","Product",new { @id = Model.Rows[i][0]})">刪除</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create","Product")">新增項目</a>